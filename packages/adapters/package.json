{
  "name": "@native-twin/adapters",
  "version": "7.0.0-next.2",
  "description": "React Native Web Tailwindcss for nextjs",
  "keywords": [
    "tailwind",
    "tailwindcss",
    "tailwind-native",
    "react-native-web",
    "universal-labs",
    "react-native",
    "react",
    "nextjs"
  ],
  "homepage": "https://github.com/react-universal/native-twin#readme",
  "bugs": {
    "url": "https://github.com/react-universal/native-twin/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/react-universal/native-twin",
    "directory": "packages/adapters"
  },
  "sideEffects": false,
  "exports": {
    "./next/app": {
      "types": "./build/next/app/index.d.ts",
      "import": "./build/esm/next/app/index.js",
      "require": "./build/next/app/index.js"
    },
    "./next/_app": {
      "types": "./build/next/_app.d.ts",
      "import": "./build/esm/next/_app.js",
      "require": "./build/next/_app.js"
    },
    "./next/_document": {
      "types": "./build/next/_document.d.ts",
      "import": "./build/esm/next/_document.js",
      "require": "./build/next/_document.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "build",
    "src",
    "app",
    "_app",
    "_document",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "twin build",
    "build:watch": "twin build -w",
    "clean": "rm -rf build",
    "dev": "tsc -p tsconfig.build.json --watch --preserveWatchOutput",
    "lint": "eslint \"./**/*.{ts,tsx}\""
  },
  "dependencies": {
    "@native-twin/core": "workspace:*"
  },
  "devDependencies": {
    "@types/loader-utils": "^2.0.6",
    "@types/webpack": "^5.28.5"
  },
  "peerDependencies": {
    "next": ">=14.0",
    "react": ">=18.0"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": true
    }
  },
  "optionalDependencies": {
    "@native-twin/cli": "workspace:*"
  },
  "publishConfig": {
    "access": "public",
    "directory": "_release/package"
  }
}
