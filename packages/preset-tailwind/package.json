{
  "name": "@native-twin/preset-tailwind",
  "version": "7.0.0-next.3",
  "description": "Tailwindcss StyleSheet generator for react native/web",
  "keywords": [
    "tailwind",
    "tailwindcss",
    "tailwind-native",
    "react-native-web",
    "universal-labs",
    "react-native",
    "react"
  ],
  "homepage": "https://github.com/react-universal/native-twin#readme",
  "bugs": {
    "url": "https://github.com/react-universal/native-twin/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/react-universal/native-twin",
    "directory": "packages/preset-tailwind"
  },
  "license": "MIT",
  "main": "./build/cjs/index.js",
  "types": "./build/dts/index.d.ts",
  "files": [
    "build",
    "colors",
    "src",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "yarn build-esm && yarn build-annotate && yarn build-cjs && build-utils pack-v2",
    "build-annotate": "babel build/esm --plugins annotate-pure-calls --out-dir build/esm --source-maps",
    "build-cjs": "babel build/esm --plugins @babel/transform-export-namespace-from --plugins @babel/transform-modules-commonjs --out-dir build/cjs --source-maps",
    "build-esm": "tsc -b tsconfig.build.json",
    "build:watch": "tsc -b tsconfig.dev.json -w",
    "clean": "rm -rf build",
    "dev": "tsc -p tsconfig.build.json --watch --preserveWatchOutput",
    "lint": "eslint \"./**/*.{ts,tsx}\"",
    "test": "jest",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@native-twin/core": "workspace:*",
    "@native-twin/css": "workspace:*",
    "@native-twin/helpers": "workspace:*"
  },
  "peerDependencies": {
    "react": "~18.2.0"
  },
  "optionalDependencies": {
    "jest": "*"
  },
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "nx": {
    "includedScripts": [
      "build",
      "build:watch",
      "clean",
      "dev",
      "lint",
      "test:debug",
      "test:watch"
    ]
  }
}
