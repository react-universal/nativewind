{
  "name": "@native-twin/preset-tailwind",
  "version": "7.0.0-next.3",
  "description": "Tailwindcss StyleSheet generator for react native/web",
  "keywords": [
    "tailwind",
    "tailwindcss",
    "tailwind-native",
    "react-native-web",
    "universal-labs",
    "react-native",
    "react"
  ],
  "homepage": "https://github.com/react-universal/native-twin#readme",
  "bugs": {
    "url": "https://github.com/react-universal/native-twin/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/react-universal/native-twin",
    "directory": "packages/preset-tailwind"
  },
  "license": "MIT",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./build/dts/index.d.ts",
      "import": "./build/esm/index.js",
      "default": "./build/cjs/index.js"
    },
    "./colors": {
      "types": "./build/dts/tailwind-theme/colors.d.ts",
      "import": "./build/esm/tailwind-theme/colors.js",
      "default": "./build/cjs/tailwind-theme/colors.js"
    }
  },
  "main": "./build/cjs/index.js",
  "module": "./build/esm/index.js",
  "types": "./build/dts/index.d.ts",
  "files": [
    "build",
    "colors",
    "src",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "npx twin pack-dev",
    "build:watch": "npx twin pack-dev -w",
    "clean": "rm -rf build",
    "dev": "tsc -p tsconfig.build.json --watch --preserveWatchOutput",
    "lint": "eslint \"./**/*.{ts,tsx}\"",
    "test": "jest",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@native-twin/core": "workspace:*",
    "@native-twin/css": "workspace:*",
    "@native-twin/helpers": "workspace:*"
  },
  "peerDependencies": {
    "react": "~18.2.0"
  },
  "optionalDependencies": {
    "jest": "*"
  },
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "nx": {
    "includedScripts": [
      "build",
      "build:watch",
      "clean",
      "dev",
      "lint",
      "test:debug",
      "test:watch"
    ]
  }
}
