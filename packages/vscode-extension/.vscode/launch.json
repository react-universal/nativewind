// A launch configuration that compiles the extension and then opens it inside a new window
{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Lanuch extension Client + Server",
      "configurations": [
        "Launch Extension",
        "Build language service",
        "Build Extension Server"
      ],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "tools",
        "order": 1
      },
      "preLaunchTask": "Build vscode"
    }
  ],
  "configurations": [
    {
      "type": "extensionHost",
      "request": "launch",
      "name": "Launch Extension",
      "runtimeExecutable": "${execPath}",
      "autoAttachChildProcesses": true,
      "presentation": {
        "hidden": true,
        "group": "",
        "order": 1
      },
      "args": [
        "--extensionDevelopmentPath=${workspaceRoot}",
        "--disable-extensions",
        "${workspaceRoot}/project-fixture"
      ],
      "outFiles": [
        "${workspaceRoot}/build/**/*.js",
        "${workspaceRoot:}/build/**/*.js"
      ],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "${workspaceFolder}/../**",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "Extension Tests",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/build/test/run"
      ],
      "preLaunchTask": {
        "type": "npm",
        "script": "build:tsc"
      },
      "outFiles": [
        "${workspaceFolder}/build/test/**/*.js"
      ]
    }
  ],
}