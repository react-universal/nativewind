{
  "name": "native-twin-vscode",
  "displayName": "Native Twin LSP",
  "version": "1.0.0",
  "private": true,
  "description": "Native Twin vscode extension.",
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets",
    "Visualization"
  ],
  "homepage": "https://github.com/react-universal/native-twin#readme",
  "bugs": {
    "url": "https://github.com/react-universal/native-twin/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/react-universal/native-twin",
    "directory": "packages/vscode-extension"
  },
  "license": "MIT",
  "author": "Cristhian Gutierrez",
  "publisher": "native-twin",
  "scripts": {
    "build": "pnpm build-esm && pnpm build-annotate && pnpm build-cjs && build-utils pack-v2",
    "build-annotate": "babel build/esm --plugins annotate-pure-calls --out-dir build/esm --source-maps",
    "build-cjs": "babel build/esm --plugins @babel/transform-export-namespace-from --plugins @babel/transform-modules-commonjs --out-dir build/cjs --source-maps",
    "build-esm": "tsc -b tsconfig.build.json",
    "build:tsc": "tsc -b",
    "build:tsc:watch": "tsc -p tsconfig.cjs.json --watch",
    "clean": "rm -rf build",
    "lint": "eslint . --ext .ts,.tsx",
    "vsc-test": "vscode-test --watch",
    "vsc:test": "sh ./scripts/e2e.sh",
    "vscode:dev": "tsc -b -w",
    "vscode:prepublish": "node ./esbuild.js"
  },
  "contributes": {
    "commands": [
      {
        "command": "nativeTwin.restart",
        "title": "Restart IntelliSense",
        "category": "Native Twin",
        "icon": "$(refresh)"
      },
      {
        "command": "nativeTwin.openTwinRegion",
        "title": "Show File Region",
        "category": "Native Twin",
        "icon": "$(eye)"
      },
      {
        "command": "nativeTwin.workspaceInit",
        "title": "Setup Workspace",
        "category": "Native Twin",
        "icon": "$(play)"
      },
      {
        "command": "nativeTwin.createTwinFiles",
        "title": "Generate Native Twin files",
        "category": "Native Twin",
        "icon": "$(play)"
      }
    ],
    "configuration": [
      {
        "id": "nativeTwin",
        "title": "Native Twin Extension Configuration Settings",
        "type": "object",
        "properties": {
          "nativeTwin.functions": {
            "type": "array",
            "scope": "window",
            "title": "Function expressions to validate",
            "description": "List of template tags or functions to enable Native Twin intellisense in.",
            "items": {
              "type": "string",
              "description": "Function/Tag name."
            },
            "default": [
              "tw",
              "cx",
              "tx",
              "apply",
              "css",
              "variants",
              "styled",
              "style",
              "createVariants"
            ]
          },
          "nativeTwin.jsxAttributes": {
            "type": "array",
            "description": "List of html/jsx attributes to enable Native Twin intellisense in.",
            "scope": "window",
            "items": {
              "type": "string",
              "description": "JSX Attribute name."
            },
            "default": [
              "className",
              "class",
              "tw"
            ]
          },
          "nativeTwin.debug": {
            "type": "boolean",
            "scope": "window",
            "description": "Enable/disable additional debug information.",
            "default": false
          },
          "nativeTwin.enable": {
            "type": "boolean",
            "scope": "window",
            "default": true,
            "markdownDescription": "Controls whether Native Twin intellisense is enabled or not."
          },
          "nativeTwin.trace.server": {
            "scope": "window",
            "type": "string",
            "enum": [
              "off",
              "messages",
              "verbose"
            ],
            "default": "off",
            "description": "Traces the communication between VS Code and the language server."
          }
        }
      }
    ],
    "views": {
      "nativeTwin": [
        {
          "id": "nativeTwin-files",
          "name": "Files"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "nativeTwin",
          "title": "NativeTwin Dev Tools",
          "icon": "resources/icons/transparent/logo-alt-50.png"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "nativeTwin-files",
        "contents": "Native Twin Dev Tools did not generate any file yet."
      }
    ]
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "dependencies": {
    "@native-twin/compiler": "workspace:*",
    "@native-twin/helpers": "workspace:*",
    "@native-twin/language-server": "workspace:*",
    "@native-twin/language-service": "workspace:*",
    "effect": "catalog:effect",
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.94.2",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  },
  "optionalDependencies": {
    "@native-twin/cli": "workspace:*"
  },
  "engines": {
    "vscode": "^1.94.2"
  },
  "publishConfig": {
    "access": "public",
    "directory": "_release/package"
  },
  "icon": "resources/icons/transparent/logo-128.png",
  "extensionKind": [
    "ui",
    "workspace"
  ]
}
