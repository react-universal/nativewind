{
  "name": "native-twin-vscode",
  "displayName": "Native Twin LSP",
  "version": "1.0.0",
  "private": true,
  "description": "Native Twin vscode extension.",
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets",
    "Other"
  ],
  "homepage": "https://github.com/react-universal/native-twin#readme",
  "bugs": {
    "url": "https://github.com/react-universal/native-twin/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/react-universal/native-twin",
    "directory": "packages/vscode-extension"
  },
  "license": "MIT",
  "author": "Cristhian Gutierrez",
  "publisher": "native-twin",
  "main": "./build/extension.js",
  "scripts": {
    "build": "node ./esbuild.js",
    "build:tsc": "tsc -p tsconfig.json",
    "build:tsc:watch": "tsc -p tsconfig.json --watch",
    "build:watch": "tsc -p tsconfig.json --watch",
    "clean": "rm -rf build",
    "lint": "eslint . --ext .ts,.tsx",
    "vsc-test": "vscode-test --watch",
    "vsc:test": "sh ./scripts/e2e.sh",
    "vscode:dev": "tsc -b -w",
    "vscode:prepublish": "node ./esbuild.js"
  },
  "contributes": {
    "commands": [
      {
        "command": "nativeTwin.restart",
        "title": "Native Twin: Restart IntelliSense"
      },
      {
        "command": "nativeTwin.className",
        "title": "Native Twin: Replace className strings"
      },
      {
        "command": "nativeTwin.workspaceInit",
        "title": "Setup Workspace",
        "category": "Native Twin"
      },
      {
        "command": "nativeTwin.init",
        "title": "Create Files",
        "category": "Native Twin"
      },
      {
        "command": "nativeTwin.reset",
        "title": "Delete Files",
        "category": "Native Twin"
      },
      {
        "command": "nativeTwin.deleteFile",
        "title": "Delete \"file.txt\"",
        "category": "Native Twin"
      },
      {
        "command": "nativeTwin.addFile",
        "title": "Add \"file.txt\"",
        "category": "Native Twin"
      }
    ],
    "configuration": [
      {
        "id": "nativeTwin",
        "title": "Native Twin Configuration",
        "type": "object",
        "properties": {
          "nativeTwin.functions": {
            "type": "array",
            "scope": "window",
            "description": "List of template tags or functions to enable Native Twin intellisense in.",
            "items": {
              "type": "string",
              "description": "Function/Tag name."
            },
            "default": [
              "tw",
              "cx",
              "tx",
              "apply",
              "css",
              "variants",
              "styled",
              "style",
              "createVariants"
            ]
          },
          "nativeTwin.attributes": {
            "type": "array",
            "description": "List of html/jsx attributes to enable Native Twin intellisense in.",
            "scope": "window",
            "items": {
              "type": "string",
              "description": "Attribute name."
            },
            "default": [
              "className",
              "class",
              "tw"
            ]
          },
          "nativeTwin.debug": {
            "type": "boolean",
            "scope": "window",
            "description": "Enable/disable additional debug information.",
            "default": false
          },
          "nativeTwin.enable": {
            "type": "boolean",
            "scope": "window",
            "default": true,
            "markdownDescription": "Controls whether Native Twin intellisense is enabled or not."
          },
          "nativeTwin.trace.server": {
            "scope": "window",
            "type": "string",
            "enum": [
              "off",
              "messages",
              "verbose"
            ],
            "default": "off",
            "description": "Traces the communication between VS Code and the language server."
          }
        }
      }
    ],
    "grammars": [
      {
        "language": "log",
        "scopeName": "code.log",
        "path": "./src/syntaxes/log.tmLanguage"
      }
    ],
    "languages": [
      {
        "id": "log",
        "aliases": [
          "log"
        ],
        "extensions": [
          ".log"
        ],
        "configuration": "./log.configuration.json",
        "mimetypes": [
          "log",
          "twinLog",
          "text/log",
          "text/x-log",
          "text/x-code-output",
          "x-code-output"
        ]
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "nativeTwin.init",
          "when": "workbenchState == workspace"
        },
        {
          "command": "nativeTwin.reset",
          "when": "workbenchState == workspace"
        },
        {
          "command": "nativeTwin.deleteFile",
          "when": "workbenchState == workspace"
        },
        {
          "command": "nativeTwin.addFile",
          "when": "workbenchState == workspace"
        },
        {
          "command": "nativeTwin.workspaceInit",
          "when": "workbenchState != workspace"
        }
      ]
    }
  },
  "activationEvents": [
    "onStartupFinished",
    "onFileSystem:native-twin"
  ],
  "dependencies": {
    "@native-twin/helpers": "workspace:*",
    "@native-twin/language-server": "workspace:*",
    "@native-twin/language-service": "workspace:*",
    "effect": "^3.10.0",
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.89.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "vscode-test": "^1.6.1"
  },
  "optionalDependencies": {
    "@native-twin/cli": "workspace:*"
  },
  "engines": {
    "vscode": "^1.89.0"
  },
  "publishConfig": {
    "access": "public",
    "directory": "_release/package"
  },
  "extensionKind": [
    "ui",
    "workspace"
  ]
}
