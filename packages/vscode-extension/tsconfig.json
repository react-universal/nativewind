{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "lib": ["ES2022"],
    "types": ["mocha"],
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declarationMap": true,
    "strict": true,
    "noEmit": false,
    "outDir": "build",
    "rootDir": "src"
  },
  "exclude": [
    "node_modules",
    ".vscode-test",
    "build",
    "project-fixture",
    "esbuild.js",
    "jest.config.js"
  ]
}