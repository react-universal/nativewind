{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "emitDeclarationOnly": false,
    "declarationMap": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2020",
    "moduleDetection": "force",
    "lib": ["ES2022"],
    "noEmit": false,
    "noEmitOnError": false
  }
}