{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "$schema",
    "platform"
  ],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "runner": {
      "enum": [
        "rollup",
        "esbuild"
      ],
      "default": "rollup"
    },
    "logs": {
      "$ref": "#/$defs/log"
    },
    "minify": {
      "type": "boolean",
      "default": false
    },
    "reactNative": {
      "type": "boolean",
      "default": false
    },
    "platform": {
      "enum": [
        "browser",
        "node"
      ]
    },
    "types": {
      "$ref": "#/$defs/types"
    },
    "entries": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": [
        "./src/index.ts"
      ]
    },
    "vscode": {
      "type": "boolean",
      "default": false
    },
    "bundle": {
      "type": "boolean",
      "default": false
    },
    "production": {
      "type": "boolean",
      "default": false
    }
  },
  "additionalProperties": false,
  "title": "Struct (Encoded side)",
  "$defs": {
    "log": {
      "anyOf": [
        {
          "type": "boolean"
        },
        {
          "enum": [
            "info",
            "debug",
            "verbose"
          ]
        }
      ],
      "description": "Log config",
      "title": "build logs",
      "default": false
    },
    "types": {
      "type": "boolean",
      "description": "generate .d.ts Default: true",
      "title": "Ts types",
      "default": true
    }
  }
}