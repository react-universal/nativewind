{
  "name": "@native-twin/cli",
  "version": "7.0.0-next.3",
  "description": "Native Twin packages bundler",
  "homepage": "https://github.com/react-universal/native-twin#readme",
  "bugs": {
    "url": "https://github.com/react-universal/native-twin/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/react-universal/native-twin",
    "directory": "packages/builder"
  },
  "license": "MIT",
  "author": "Cristhian Gutierrez",
  "type": "module",
  "main": "./build/twin-cli.js",
  "bin": {
    "twin": "./build/twin-cli.js"
  },
  "files": [
    "LICENSE",
    "README.md",
    "CHANGELOG.md",
    "build",
    "src"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json && node esbuild.mjs",
    "clean": "rm -rf build",
    "gen:schema": "node --loader ts-node/esm -r ts-node/register --no-warnings ./src/config/twin.schema",
    "lint": "eslint"
  },
  "dependencies": {
    "@effect/cli": "^0.48.3",
    "@effect/platform": "^0.69.3",
    "@effect/platform-node": "^0.64.4",
    "effect": "^3.10.0",
    "fs-extra": "11.2.0",
    "gzip-size": "^7.0.0",
    "lodash.merge": "4.6.2"
  },
  "devDependencies": {
    "@chialab/esbuild-rna": "^0.18.2",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/fs-extra": "11.0.4",
    "@types/lodash.merge": "^4.6.9",
    "esbuild": "0.21.5",
    "minimist": "^1.2.8",
    "rollup": "^4.23.0"
  },
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  }
}
