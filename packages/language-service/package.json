{
  "name": "@native-twin/language-service",
  "version": "7.0.0-next.3",
  "description": "Native Twin language server provider",
  "homepage": "https://github.com/react-universal/native-twin#readme",
  "bugs": {
    "url": "https://github.com/react-universal/native-twin/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/react-universal/native-twin",
    "directory": "packages/language-server"
  },
  "license": "MIT",
  "author": "Cristhian Gutierrez",
  "type": "module",
  "files": [
    "LICENSE",
    "README.md",
    "CHANGELOG.md",
    "extension",
    "build",
    "src",
    "browser"
  ],
  "scripts": {
    "build": "pnpm build-esm && pnpm build-annotate && pnpm build-cjs && build-utils pack-v2",
    "build-annotate": "babel build/esm --plugins annotate-pure-calls --out-dir build/esm --source-maps",
    "build-cjs": "babel build/esm --plugins @babel/transform-export-namespace-from --plugins @babel/transform-modules-commonjs --out-dir build/cjs --source-maps",
    "build-esm": "tsc -b tsconfig.build.json",
    "build:tsc": "tsc -p tsconfig.build.json",
    "build:tsc:watch": "twin build -w",
    "clean": "rm -rf build",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "echo \"Non tests\"",
    "vscode:dev": "tsc -p tsconfig.build.json --watch"
  },
  "dependencies": {
    "@ctrl/tinycolor": "^4.1.0",
    "@native-twin/arc-parser": "workspace:*",
    "@native-twin/compiler": "workspace:*",
    "@native-twin/core": "workspace:*",
    "@native-twin/css": "workspace:*",
    "@native-twin/helpers": "workspace:*",
    "@native-twin/preset-tailwind": "workspace:*",
    "@vscode/emmet-helper": "^2.9.3",
    "cssbeautify": "0.3.1",
    "effect": "catalog:effect",
    "markdown-it": "^14.1.0",
    "match-sorter": "6.3.4",
    "showdown": "2.1.0",
    "ts-morph": "^23.0.0",
    "vscode-css-languageservice": "^6.2.14",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-protocol": "^3.17.5",
    "vscode-languageserver-textdocument": "^1.0.11",
    "vscode-languageserver-types": "^3.17.5"
  },
  "devDependencies": {
    "@babel/plugin-syntax-jsx": "^7.23.3",
    "@babel/preset-typescript": "7.23.3",
    "@types/cssbeautify": "^0.3.5",
    "@types/markdown-it": "^14.1.2",
    "@types/showdown": "^2.0.6",
    "esbuild-plugin-d.ts": "^1.3.0",
    "madge": "7.0.0"
  },
  "optionalDependencies": {
    "jest": "*"
  },
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "nx": {
    "includedScripts": [
      "build",
      "build:watch",
      "clean",
      "esbuild:build",
      "lint",
      "vscode:dev"
    ]
  }
}
