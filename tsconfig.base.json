{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "module": "NodeNext",
    "target": "ES2022",
    "strictFunctionTypes": true,
    "moduleDetection": "force",
    "noFallthroughCasesInSwitch": true,
    "noPropertyAccessFromIndexSignature": true,
    "declarationMap": true,
    "moduleResolution": "NodeNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "strict": true,
    "types": ["node", "react-native", "jest"],
    "skipLibCheck": true,
    "strictNullChecks": true,
    "disableReferencedProjectLoad": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipDefaultLibCheck": true,
    "composite": true,
    "noUncheckedIndexedAccess": false,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "allowUnreachableCode": false,
    "noImplicitReturns": false,
    "exactOptionalPropertyTypes": false,
    "noEmitOnError": false,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitOverride": true,
    "allowJs": false,
    "checkJs": false,
    "noErrorTruncation": false,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "incremental": true,
    "removeComments": false,
    "plugins": [
      {
        "name": "@effect/language-service"
      }
    ],
    "paths": {
      // Adapters for NextJS
      "@native-twin/adapters/next/_app": ["packages/adapters/src/next/_app.js"],
      "@native-twin/adapters/next/_document": ["packages/adapters/src/next/_document.js"],
      "@native-twin/adapters/next/app": ["packages/adapters/src/next/app/index.js"],

      // Twin Builder
      "@native-twin/builder": ["packages/builder/src/twin-cli.js"],
      "@native-twin/builder/*": ["packages/builder/src/*.js"],

      // Css Lib
      "@native-twin/css": ["packages/css/src/index.js"],
      "@native-twin/css/*": ["packages/css/src/*.js"],
      "@native-twin/css/test/*": ["packages/css/test/*.js"],

      // Core
      "@native-twin/core": ["packages/native-twin/src/index.js"],
      "@native-twin/core/*": ["packages/native-twin/src/*.js"],
      "@native-twin/core/test/*": ["packages/native-twin/src/test/*.js"],

      // Twin Compiler
      "@native-twin/compiler": ["packages/compiler/src/index.js"],
      "@native-twin/compiler/*": ["packages/compiler/src/*.js"],
      "@native-twin/compiler/test/*": ["packages/compiler/test/*.js"],

      "@native-twin/arc-parser": ["packages/arc-parser/src/index.js"],
      "@native-twin/arc-parser/*": ["packages/arc-parser/src/*.js"],
      "@native-twin/arc-parser/test*": ["packages/arc-parser/test/*.js"],

      "@native-twin/helpers": ["packages/helpers/src/index.js"],
      "@native-twin/helpers/*": ["packages/helpers/src/*.js"],
      "@native-twin/helpers/test/*": ["packages/helpers/test/*.js"],

      "@native-twin/jsx": ["packages/jsx/src/index.js"],
      "@native-twin/jsx/*": ["packages/jsx/src/*.js"],
      "@native-twin/jsx/test/*": ["packages/jsx/__tests__/*.js"],

      // Common libs
      "@native-twin/babel": ["packages/babel/src/index.js"],
      "@native-twin/dev-tools": ["packages/dev-tools/src/index.js"],
      "@native-twin/language-server": ["packages/language-server/src/index.js"],
      "@native-twin/language-service": ["packages/language-service/src/index.js"],
      "@native-twin/metro": ["packages/metro/src/index.js"],
      "@native-twin/preset-tailwind": ["packages/preset-tailwind/src/index.js"],
      "@native-twin/styled": ["packages/styled/src/index.js"],
      "@native-twin/vite-plugin": ["packages/vite-plugin/src/index.js"],
      "@native-twin/vscode-extension": ["packages/vscode-extension/src/index.js"],
    }
  },
  "exclude": ["**/eslint.config.js"]
}
